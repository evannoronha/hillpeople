---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<section aria-label="Welcome" class="max-w-6xl mx-auto px-4 pt-6 pb-10">
  <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">{title}</h1>
  {subtitle && (
    <p class="text-lg sm:text-xl opacity-80 max-w-2xl leading-relaxed">
      {subtitle}
    </p>
  )}
</section>
