---
import Layout from "../../layouts/Layout.astro";

const message = Astro.url.searchParams.get("message") || "Something went wrong";
---

<Layout pageTitle="Newsletter Error">
  <div class="max-w-3xl mx-auto px-4 py-10 text-center">
    <h1 class="text-4xl font-bold mb-6">Oops!</h1>
    <p class="text-lg text-gray-600 mb-8">
      {message}
    </p>
    <a href="/" class="inline-block bg-sage text-cream px-6 py-3 rounded hover:opacity-90 transition-opacity">
      Back to Home
    </a>
  </div>
</Layout>
